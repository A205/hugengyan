<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/result"
        android:text=" "
        android:textSize="20pt"
        android:singleLine="true"
        android:focusable="false"
        android:digits="1234567890"
        android:cursorVisible="false"
        android:background="@drawable/view_shape"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_clear"
        android:text="清 除"
        android:textSize="12pt"
        android:shadowRadius="1"
        android:shadowColor="#aa5"
        android:shadowDx="5"
        android:shadowDy="5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/view_shape"
        />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:background="#000000"
        >
        <TableRow>
            <Button android:id="@+id/btn_1"
                android:text="1"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_2"
                android:text="2"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_3"
                android:text="3"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_add"
                android:text="+"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:background="@drawable/view_shape"
                android:layout_marginRight="10dp"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn_4"
                android:text="4"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_5"
                android:text="5"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_6"
                android:text="6"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_sub"
                android:text="-"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="10dp"
                android:background="@drawable/view_shape"

                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn_7"
                android:text="7"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_8"
                android:text="8"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_9"
                android:text="9"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_mul"
                android:text="*"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="10dp"
                android:background="@drawable/view_shape"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn_dot"
                android:text="."
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_0"
                android:text="0"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_eq"
                android:text="="
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="10"
                android:shadowDy="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/view_shape"
                />
            <Button android:id="@+id/btn_div"
                android:text="/"
                android:textSize="12pt"
                android:shadowRadius="1"
                android:shadowColor="#aa5"
                android:shadowDx="20"
                android:shadowDy="20"
                android:layout_marginBottom="10dp"
                android:background="@drawable/view_shape"
                android:layout_marginRight="10dp"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/n"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn"
        />
</LinearLayout>

